{
    "$id": "https://sim-infinyscloud-authentication-provider/identity.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "format": "email",
            "minLength": 3,
            "ory.sh/kratos": {
                "credentials": {
                    "password": {
                        "identifier": true
                    }
                },
                "verification": {
                    "via": "email"
                }
            }
        },
        "username": {
            "type": "string",
            "ory.sh/kratos": {
                "credentials": {
                    "password": {
                        "identifier": true
                    }
                }
            }
        }
    },
    "required": [
        "email",
        "username"
    ],
    "additionalProperties": false
  }